<p id="notice"><%= notice %></p>


 <h1> <%= @beer_club.name %>, <%= @beer_club.city %> </h1>

<p> Founded <%= @beer_club.founded %> </p>

<b> Members: </b>

<ul>
  <% if @member_ids.empty? %>
      <p> <%= @beer_club.name %> has no members! </p>
  <% else %>
     <% @member_ids.each do |id| %>
     <li> <%= link_to User.find(id).username, User.find(id) %> </li>
     <% end %>
  <% end %>
</ul>

<% if not current_user.nil? and not current_user.beer_clubs.include?(@beer_club) %>

<%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value:"join the club" %>
<% end %>

<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club), class: 'btn btn-warning btn-sm' %>
