<h1>Beer clubs</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th>City</th>
    <th></th>
    <th></th>
  </tr>

<% @beer_clubs.each do |beer_club| %>
  <tr>
    <td><%= link_to beer_club.name, beer_club %></td>
    <td><%= beer_club.founded %></td>
    <td><%= beer_club.city %></td>
    <td><%= edit_and_destroy_buttons(beer_club) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Beer club', new_beer_club_path, class: "btn btn-primary btn-sm active" %>
