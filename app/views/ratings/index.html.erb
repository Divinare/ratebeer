<h2>List of ratings</h2>

<%= link_to 'New rating', new_rating_path %>

<p> number of ratings <%= @ratings.size %></p>

<ul>
  <% @ratings.each do |rating| %>
      <li> <%= rating.beer.to_s %> <%= link_to 'delete', rating, :method => :delete, data: { confirm: 'Are you sure?' } %> </li>
  <% end %>
</ul>