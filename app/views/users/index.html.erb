<h1>Users</h1>

<table class="table table-hover">
  <thead>
  <th> </th>
  <th> Rated beers </th>
  <th> Favorite beer </th>
  <th> Total ratings </th>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.favorite_beer_noSQL %></td>
        <td><%= user.ratings.size %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_user_path, class: "btn btn-primary btn-sm active" %>


