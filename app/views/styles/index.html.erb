<h1> Styles </h1>
<p id="notice"><%= notice %></p>

<table class="table table hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td> <% if not current_user.nil? %> <%= link_to 'Edit', edit_style_path(style), class: "btn btn-warning btn-sm active" %> <% end %></td>
        <td> <% if not current_user.nil? %> <%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm active" %> <% end %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New style', new_style_path, class: "btn btn-primary btn-sm active" %>