<h1>Listing beers</h1>

<% if not flash[:error].nil? %>
    <br/>
    <b> <%= printRedColor(flash[:error]).html_safe %> </b>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Style</th>
    <th>Brewery</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= link_to beer.name, beer %></td>
    <td><%= beer.style %></td>
    <td><%= link_to Brewery.where(:id => beer.brewery_id).first.name, brewery_path(Brewery.where(:id => beer.brewery_id).first.id)  %></td>
    <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
    <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New Beer', new_beer_path) if current_user %>
